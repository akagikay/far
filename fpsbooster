wait(20)
-- Function to make a part fully invisible and simplify physics
local function processPart(instance)
    if instance:IsA("BasePart") then
        instance.Transparency = 1
        instance.Massless = true
        instance.Anchored = true
    end
end

-- Function to process all current parts in Workspace
local function processExistingParts()
    for _, instance in pairs(workspace:GetDescendants()) do
        processPart(instance)
    end
end

-- Connect to new additions in Workspace
local function setupChildAddedListener()
    workspace.DescendantAdded:Connect(function(instance)
        processPart(instance)
    end)
end

-- Function to clear everything inside Lighting
local function clearLighting()
    local lighting = game:GetService("Lighting")
    
    -- Remove all children in Lighting
    for _, child in pairs(lighting:GetChildren()) do
        child:Destroy()
    end
    
    -- Disable global shadows
    lighting.GlobalShadows = false
end

-- Function to clear all existing terrain
local function clearTerrain()
    local terrain = workspace:FindFirstChildOfClass("Terrain")
    if terrain then
        -- Clear all terrain
        terrain:Clear()
    end
end

-- Connect to terrain addition
local function setupTerrainListener()
    workspace.ChildAdded:Connect(function(instance)
        if instance:IsA("Terrain") then
            instance:Clear()
        end
    end)
end

-- Main function to initialize everything
local function initialize()
    processExistingParts() -- Process existing parts
    setupChildAddedListener() -- Handle newly added parts
end

-- Initialize the script
initialize()
